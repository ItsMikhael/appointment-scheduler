{% extends 'user/base-user.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

    <div class="user-booking-wrapper">
        <div class="container">
            <div class="booking-date" data-id={{ date }}>
                <h1>Dzień: {{ date }}</h1>
            </div>
            <div class="row justify-content-center">
                {% for ts in timeslots %}
                        <div class="col-md-2">
                            <div class="form-group">
                                {% if ts[1] %}
                                    <button class="btn btn-warning timeslots-user booked" data-id="{{ ts[0] }}">{{ ts[0] }}</button>
                                {% else %}
                                    <button class="btn btn-success timeslots-user" data-id="{{ ts[0] }}">{{ ts[0] }}</button>
                                {% endif %}
                            </div>
                        </div>
                {% endfor %}
            </div>
            <div class="booking-return">
                <a href="{{ path('user-calendar', {
                    'month': month,
                    'year': year,
                    'email': email
                })}}" class="btn btn-primary">Powrót</a>
            </div>
        </div>
    </div>



{% endblock %}